.main-nav
    &__list
        clearfix()
        list-style none
        width 100%
        margin 0
        padding 0
        background rgb(240,240,240)
        box-shadow 0 2px 5px 0 rgb(50, 50, 50)
    &__item
        display inline-block
    &__link
        display inline-block
        padding 15px 15px 25px
        font-size 24px
        transition background .2s ease
        &:hover
            background rgba(0, 155, 206, 0.6)
        span
            border-bottom 3px solid rgb(255,200,80)
    
.logo
    float left
    margin 3px 10px 0 5px