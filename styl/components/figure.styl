@import 'nib'

.figure
    clearfix()
    display inline-block
    vertical-align top
    position relative
    overflow hidden
    width 512px
    margin 0 20px 0 0
    text-align left
    color rgb(255, 255, 255)
    background rgba(255, 255, 255, .6)
    &:hover
        .figure__caption
            transform translate(0, 0)
    &__caption
        position absolute
        width 100%
        bottom 0
        padding 0 0 10px 20px
        background rgba(0, 155, 206, 0.8)
        transform translate(0, 40px)
        transition transform .5s cubic-bezier(1, 0, 0, 1)
    &__img
        width 100%
    &__heading
        margin .5em 0
        font-size 1.5em
    &__text
        margin .5em 0
    &__link
        text-decoration underline
        color rgb(255, 255, 152)